<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splashscreen.SplahscreenActivity"
    android:background="@color/white">>

    <ImageView
        android:id="@+id/imgLogoIcon"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_icon_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419"
        app:tint="@color/firstBlue"/>

    <ImageView
        android:id="@+id/imgLogoText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_text_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgLogoIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.929"
        app:tint="@color/firstBlue" />


</androidx.constraintlayout.widget.ConstraintLayout>