<resources>
    <!-- Base application theme. -->
    <style name="Theme.Fless" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firstBlue</item>
        <item name="colorPrimaryVariant">@color/secondBlue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/firstYellow</item>
        <item name="colorSecondaryVariant">@color/secondYellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/firstBlue</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Fless.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Fless.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Fless.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>